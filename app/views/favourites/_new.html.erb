
<% if user_signed_in? && event.favourited?(current_user) %>
  <% favourite = event.favourites.where(user_id: current_user.id).first %>
  <%= link_to event_favourite_path(event, favourite), class: "heart-link", method: :delete do%>
    <i class="fas fa-heart"></i>
  <% end %>
<% else %>
  <%= link_to event_favourites_path(event), class: "heart-link", method: :post do %>
    <i class="far fa-heart"></i>
  <% end %>
<% end %>





