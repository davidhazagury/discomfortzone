<h3>Meet some Discomfort Zoners </h3>

<div class="banner-index" style="background-image: url(https://images.unsplash.com/photo-1526723476341-307183286978?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80);">
  <div class="container-shrink">
      <%= form_tag users_path, method: :get do %>
        <div class="search-form-control form-group">
          <%= text_field_tag :query,
          params[:query],
          class: "form-control string required",
          placeholder: "Find an adventure..."
          %>
          <%= submit_tag "Search", class: "btn btn-cool-red" %>
        </div>
      <% end %>
  </div>
</div>

<div class="users-container">
  <% @users.each do |user| %>
    <div class="user-card justify-content-between">
      <div class="user d-flex flex-column justify-content-center align-items-center">
      <% if user.photo.attached? %>
        <div class="avatar-large" style = " background-image: url(<%= cl_image_path user.photo.key %>)"></div>
      <% else %>
         <div class="host-avatar-no-picture"  style="background-color: lightslategrey"><%= user.first_name.first.capitalize + user.last_name.first.capitalize%></div>
      <% end %>
      <p class = "user"><%= link_to user.first_name.capitalize + " " + user.last_name.capitalize, user %></p>
     </div>
     <div class="bucket-list">Bucket List</div>
   </div>
    <hr>
  <% end %>
</div>

