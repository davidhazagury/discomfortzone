
  <div class="header">
    <div class="header-title">
      <h3>Hi, I'm <%= @user.first_name.capitalize %></h3>
      <span class="join-in">Joined in <%= @user.created_at.year %></span>
    </div>
    <%if @user.photo.attached? %>
      <div class="host-avatar" style = " background-image: url(<%= cl_image_path @user.photo.key %>)"></div>
    <% else %>
      <div class="host-avatar-no-picture" id="no-pic-avatar" style="background-color: lightslategrey"><%= @user.first_name.first.capitalize + @user.last_name.first.capitalize%></div>
    <% end %>
  </div>
  <% if @user == current_user %>
    <%= link_to "Edit your profile", edit_user_registration_path, class: "btn-cool-red "  %>
  <% end %>
  <div class="description-user-box">
    <h3><%= @user.first_name.capitalize%>'s listings</h3>
    <div class="listed-events">
      <% @user.events.each do |event| %>
        <%= link_to event_path(event), style:"text-decoration: none;" do  %>
          <div class="event-card" style = " background-image: url(<%= cl_image_path event.photo.key %>);">
            <h3><%= event.title.capitalize %></h3>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="reviews-user-box" >
      <h3>Reviews from guests</h3>
        <% @user.events.each do |event| %>
          <div class="reviews-box">
            <% event.reviews.each do |review| %>
              <div class="review-card">
                <div class="creation-rating">
                  <p><%= review.created_at.strftime("%B,  %Y")%></p>
                  <%= content_tag(:i, "", class: "fas fa-star", id: "icon-reviews") * review.rating%>
                </div>
                <p style="margin:0; font-weight: 400"><%= review.event.title.capitalize %></p>
                <p id="review"><%= review.content.capitalize %></p>
                <div class="reviewer-area">
                  <%if review.user.photo.attached? %>
                  <div class="reviewer-avatar-avatar" style = " background-image: url(<%= cl_image_path review.user.photo.key %>)"></div>
                    <%#= cl_image_tag review.user.photo.key, alt: "pic", class: "reviewer-avatar"%>
                  <% else %>
                  <div class="reviewer-avatar" id="reviewer-avatar-no-pic" style="background-color: lightslategrey"><%= review.user.first_name.first.capitalize + review.user.last_name.first.capitalize%></div>
                    <%#= image_tag "https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png", alt: "alttext", class: "reviewer-avatar" %>
                  <% end %>
                  <%= review.user.first_name.capitalize + " " + review.user.last_name.capitalize %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
  </div>
</div>


