<div class="container">
  <div class="header">
    <p>Hi! I´m <%= @user.first_name.capitalize %></p>
    <%#= cl_image_tag @user.photo.key, alt: "pic", class: "avatar-owner"%>
  </div>
  <span class="join-in">Join in <%= @user.created_at.year %></span>
  <% if current_user.signed_in? && current_user.id== @user.id%>
  <%= link_to "Edit your profile", edit_user_registration_path  %>
  <% end %>
  <div class="description">
    <h3><%= @user.first_name.capitalize%>´s listings</h3>
    <div class="listed-events">
      <% @user.events.each do |event| %>
      <p><%= event.title %></p>
      <p><%= event.address %></p>
      <p><%= event.description.first(150) %>...</p>
      <%= cl_image_tag event.photo.key, alt: "event_pic", style: "width : 70%" %>
      <p><% end %>
    </div>
<%= link_to "Log Out", destroy_user_session_path, method: :delete  %>
</div>
