<div class="banner-index" style="background-image: url(https://images.unsplash.com/photo-1526723476341-307183286978?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80);">
  <div class="container-shrink">
      <%= form_tag events_path, method: :get do %>
        <div class="search-form-control form-group">
          <%= text_field_tag :query,
          params[:query],
          class: "form-control string required",
          placeholder: "Find an adventure..."
          %>
          <%= submit_tag "Search", class: "btn btn-cool-red" %>
        </div>
      <% end %>
  </div>
</div>


<br>
<div class="container text-center">
  <% if @events.empty? %>
    <h4 class="my-3"> Ooops! Looks like no one is organizing such an adventure yet... <br>
    Why not organizing it yourself?</h4>
    <a class="my-3 btn-ghost-square-red" href="/events/new"> List an Adventure </a>
  <% end %>
</div>
  <div class="cards-container">
    <% @events.each do |event| %>
      <%= render "shared/card", event: event unless event.spots_left.zero? %>
    <% end %>
  </div>
