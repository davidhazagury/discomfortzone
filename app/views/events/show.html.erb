<div class="container-box">
  <div class="image-box">
    <%= cl_image_tag @event.photo.key %>
  </div>
  <div class="description-box">
    <div class="avatar">
    <% if @current_user.photo.attached? %>
    <%= @event.user.photo.key %>
    <% else %>
    <img src="https://image.flaticon.com/icons/png/512/64/64572.png" alt="profile-pic">
    <% end %>
  </div>
    <div class="description">
      <h2>Event title: <%= @event.title %></h2>
      <p><%= @event.description %></p>
      <p>Hosted by: <%=  @event.user.first_name %> </p>
    </div>
