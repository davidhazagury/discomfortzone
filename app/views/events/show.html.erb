
<div class="container-event-box">
    <%= cl_image_tag @event.photo.key, class:"event-banner"%>
  <div class="description-box">
    <%= link_to user_path(@event.user) do  %>
      <% if @event.user.photo.attached? %>
        <div class="avatar-owner" style = " background-image: url(<%= cl_image_path @event.user.photo.key %>)"></div>
        <%#= cl_image_tag @event.user.photo.key , alt: "profilepic" , class: "avatar-owner"  %>
      <% else %>
        <div class="host-avatar-no-picture" id="no-pic-avatar"style="background-color: lightslategrey"><%= @event.user.first_name.first.capitalize + @event.user.last_name.first.capitalize%></div>
      <% end %>
    <% end %>
    <div class="description">
      <div class="headders">
        <h2><%= @event.title %></h2>
        </div>
      <div class="icons-event-box">
        <table>
          <thead>
            <th>
              <i class="fas fa-map-marker-alt"></i>
            </th>
            <th>
              <i class="far fa-calendar-alt"></i>
            </th>
            <th>
              <i class="fas fa-users"></i>
            </th>
          </thead>
          <tbody>
            <td>
              <%= @event.address %>
            </td>
            <td>
              <%= @event.start_time.strftime("%d %b %y")  %>
            </td>
            <td>
              <%= @event.capacity %>
            </td>
          </tbody>
        </table>

        <!--<i class="fas fa-map-marker-alt">
          <%#= @event.address %>
        </i>
        <i class="far fa-calendar-alt">
          <#%= @event.start_time.strftime("%d %b %y")  %>
        </i>
        <i class="fas fa-users">
          <%#= @event.capacity %>
        </i>-->
      </div>
      <div class="avatars-event-box">
        <!-- THIS WILL NEED TO BE FETCH WITH THE PARTICIPANTS PROFILE PICTURES-->
        <%= image_tag "https://www.biography.com/.image/t_share/MTY2MzU3Nzk2OTM2MjMwNTkx/elon_musk_royal_society.jpg", alt: "alttext", class:"participants-avatar" %>
        <%= image_tag "https://www.biography.com/.image/t_share/MTY2NzA3ODE3OTgwMzcyMjYw/jeff-bezos-andrew-harrer_bloomberg-via-getty-images.jpg", alt: "alttext", class:"participants-avatar" %>
        <%= image_tag "https://vignette.wikia.nocookie.net/simpsons/images/b/bd/Homer_Simpson.png/revision/latest/top-crop/width/360/height/360?cb=20140126234206", alt: "alttext", class:"participants-avatar" %>
    </div>
    <p><%= @event.description %></p>
    <% unless current_user == @event.user || @event.participant?(current_user) %>
     <%= render "event_users/new" %>
     <%= render "favourites/new", event: @event %>
    <% end %>


      <!-- Content if current_user is either the host, or accepted to the event -->
      <% if current_user == @event.user || @event.participant?(current_user) %>
        <h2 style="border-top: 1px solid rgb(225,225,225)">Woohoo! <%= @event.user.first_name %> has accepted you for this adventure</h2>
        <h4>Why not have a chat with the other participants?</h4>
        <%= link_to "Chat now", event_chat_path(@event), class: "btn btn-cool-red" %>
      <% end %>
  </div>

  </div>

</div>

