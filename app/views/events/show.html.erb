<div class="container-event-box">
    <%= cl_image_tag @event.photo.key %>
  <div class="description-box">
    <% if @event.user.photo.attached? %>
    <img src="@event.user.photo.key" alt="" class="avatar">
    <% else %>
    <%= image_tag "https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png", alt: "profile pic", class: "avatar" %>
    <% end %>
    <div class="description">
      <h2><%= @event.title %></h2>
      <p><%= @event.description %></p>
    </div>
