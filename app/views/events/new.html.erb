<div class="container form-container">
  <%= simple_form_for @event do |f| %>
    <%= f.input :title, label: 'Title', required: "true", error: 'Please specify one' %>
    <%= f.input :description, label: 'Description',required: "true", error: 'Please specify one' %>
    <%= f.input :address, label:'Address', required: "true", error: 'Please specify one' %>
    <%= f.input :capacity, label:'For how many people?', required: "true", error: 'Please specify one'%>
    <%= f.input :photo, as: :file, label: 'Upload a photo', required: "true", error: 'Please specify one'%>
    <div class="flatpickr-inputs">
      <input type="text"  placeholder="Start Time" class="calendar flatpickr flatpickr-input" name= "event[start_time]">
      <input type="text" placeholder="End Time" class="calendar flatpickr flatpickr-input" name= "event[end_time]">
    </div>
    <%= f.button :submit, "Start an Adventure", class: "btn-cool-red" %>
  <% end %>
</div>

